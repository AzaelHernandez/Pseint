Proceso valorNumerico
	//crear un pseudocodigo que lea un numero real y diga si es positivo, negativo o cero
	Definir numero Como Real;
	Imprimir "introduce un valor";
	Leer numero;
	
	Imprimir "El numero introducido es: ", numero;
	
	si numero>0 Entonces
		Imprimir "El numero es positivo";
		si numero<0 Entonces
			Imprimir "El numero es negativo";
		FinSi
	SiNo
		Imprimir "El numero es cero";
	FinSi

	
	
FinProceso
