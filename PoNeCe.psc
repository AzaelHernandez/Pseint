Proceso PoNeCe
	//Número positivo, negativo o cero
	definir x Como Real;
	Imprimir "Digite un número para evaluar si es +,-,0";
	Leer x;
	
	si x>0 Entonces
		Imprimir "El número es positivo";
	SiNo
		si x<0 Entonces
			Imprimir "El número es negativo";	
		SiNo
			Imprimir "El número es cero";
		FinSi
	FinSi
	
FinProceso
